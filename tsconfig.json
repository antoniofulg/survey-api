{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6"],
    "removeComments": true,
    "target": "ES2017",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "coverage",
    "jest-integration-config.js",
    "jest-mongodb-config.js",
    "jest-unit-config.js",
    "jest.config.js",
    "dist"
  ]
}
